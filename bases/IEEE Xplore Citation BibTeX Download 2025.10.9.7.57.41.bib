  booktitle={2025 Sixteenth International Conference on Ubiquitous and Future Networks (ICUFN)}, 
  title={Hil-Based Evaluation of Sprint: A Protocol Stack for Prioritized Space-Based Wireless Communication}, 
  year={2025},
  volume={},
  number={},
  pages={214-216},
  abstract={To overcome the impact of high latency and jitter on space-based applications and enhance the performance of the TCP/IP stack under the challenging conditions of space, the Linux kernel was customized and a priority based virtual circuit mechanism was established to ensure that high priority traffic (C1) was transmitted ahead of lower-priority classes (C2 and $C 3)$. The paper presented a Hardware-In-the-Loop emulator platform for the development and testing of the proposed protocol. The platform will allow researchers to modify the current TCP/IP stack to a customized protocol stack by modifying the kernel. The emulator platform could also be adapted for other similar protocol development and testing scenarios.},
  keywords={Wireless communication;Time division multiple access;Protocols;Linux;TCPIP;Jitter;Real-time systems;Reliability;Kernel;Testing;Space-based wireless communication;Time Division Multiple Access (TDMA);Protocol stack customization;Hardware-in-the-Loop (HIL) testing;Real-time traffic prioritization},
  doi={10.1109/ICUFN65838.2025.11170024},
  ISSN={2165-8536},
  month={July},}@INPROCEEDINGS{9219755,
  author={Londoño, Diego and Céspedes, Sandra and Bustos, Javier},
  booktitle={2020 IEEE Colombian Conference on Communications and Computing (COLCOM)}, 
  title={Analysis and Evaluation of HTTP/2 Flow Control Algorithm for IoT}, 
  year={2020},
  volume={},
  number={},
  pages={1-6},
  abstract={Traditional Internet is focused in communicating people. In contrast, in the Internet of Things (IoT), devices or things communicate among them. However, these devices are usually constrained in terms of processing, storage, batteries, and transmission power. Such limitations have led to reconsider the use of widely used protocols on Internet and to create new protocols designed to constrained scenarios. Although, HTTP, one of the well-known and most used on the Internet application layer protocol, was not designed for constrained scenarios; currently, it is highly used on the IoT. Considering this, it is necessary to adapt the protocol to the restricted scenarios to achieve its properly work with an acceptable performance. In this work, we took HTTP/2, the most recent version of the protocol, as a basis to propose a flow control algorithm oriented to IoT. Through mathematical modeling and simulations, we compare our proposal with another generic and not IoT-oriented flow control algorithm for HTTP/2, NGHTTP/2. The results showed that the proposed algorithm decreased overhead between 25% and 69% in all scenarios. In terms of throughput the results were mixed, in two of three scenarios the reference algorithm was between 3% and 13% faster. In the remaining scenario the throughput was very similar.},
  keywords={Adaptation models;Protocols;Conferences;Receivers;Throughput;Mathematical models;Delays;HTTP/2;IoT;Application protocols;Flow control;constrained devices},
  doi={10.1109/COLCOM50121.2020.9219755},
  ISSN={},
  month={Aug},}@INPROCEEDINGS{10759032,
  author={Khodja, Dalia Ammar and Nair, Sreejith V. and Adams, Ryan S. and Fevig, Ronald A. and Altaf, Maleeha},
  booktitle={2024 International Symposium on Networks, Computers and Communications (ISNCC)}, 
  title={Development of a Priority Queue-Based Protocol Stack for Handling Different Traffic Classes}, 
  year={2024},
  volume={},
  number={},
  pages={1-6},
  abstract={In space-based communications, the need for an advanced protocol stack capable of managing diverse traffic classes and varying latencies is of great importance. This paper introduces a novel protocol stack designed to support low-latency applications in space networks. At the core of our proposed solution lies the modification of the Medium Access Control (MAC) protocol and the implementation of a priority queue system, specifically designed with individual queues to efficiently accommodate varying traffic classes and their respective priorities. The first queue is dedicated to highly deterministic traffic, crucial for high-priority applications, ensuring end-to-end latency is kept below $\mathbf{100}\ \mu \mathbf{s}$. The second queue manages moderately deterministic traffic, targeting a latency requirement of 4 ms. The third queue is designed for non-deterministic traffic, catering to less time-sensitive data transmissions. This approach to MAC protocol adaptation not only meets the diverse requirements of space-based network traffic but also sets a new standard for achieving low-latency communications in challenging environments.},
  keywords={Protocols;Simulation;Media Access Control;Quality of service;Telecommunication traffic;Aerospace electronics;Jitter;Reliability;Low latency communication;Standards;Space communications;wireless communications;Medium Access Control (MAC);traffic classes;low latency communication},
