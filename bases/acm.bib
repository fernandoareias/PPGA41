@inproceedings{10.1145/3605098.3635891,
author = {Wu, Chun Ting and Hsu, Yung-Jen and Tu, Chia-Heng and Wang, Shaohua},
title = {Traffic Signal Preemption and Prioritization for High-Density Road Networks},
year = {2024},
isbn = {9798400702433},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3605098.3635891},
doi = {10.1145/3605098.3635891},
abstract = {Traffic signal priority and preemption modify the traffic signals, offering priority to specific vehicle types, such as buses, streetcars, or emergency vehicles. Specialized hardware and software systems are developed to facilitate the preemption and prioritization signal application (PPSA). Nevertheless, the international standards and the existing research works focus on providing a solid foundation for the application, rather than deploying them in high-density road networks, where the distances between two consecutive intersections are shorter than typical roads and are commonly seen in Southeast Asia cities. The shorter distances between intersections result in less time for the vehicle drivers to react when the PPSA does not grant their request, raising safety concerns. This work proposes a software framework for the PPSA, including a detailed analysis of the international standards related to PPSA, a timely response mechanism (to provide a longer reaction time after thoroughly analyzing the standards for exchanging messages), and a time estimation model (to evaluate if the system configurations have safety concerns). Experiments are conducted on our prototype system with actual hardware platforms. The experimental results show the proposed framework works well for high-density road networks. The time estimation model can be used to assess the traffic safety of PPSA systems under different system configurations. The proposed framework, standard protocol analysis, and time estimation model can be used by system designers to improve the safety and efficiency of PPSA systems, especially in areas with small street blocks.},
booktitle = {Proceedings of the 39th ACM/SIGAPP Symposium on Applied Computing},
pages = {410–419},
numpages = {10},
keywords = {traffic signal preemption and prioritization, time estimation model, vehicle-to-everythign communications, vehicle-to-infrastructure communications, road side unit, on-board unit},
location = {Avila, Spain},
series = {SAC '24}
}

@inproceedings{10.1145/3547276.3548440,
author = {Wu, Jung-Hsien and Yang, Jie-Yu and Chang, Yu-Ching and Sun, Min-Te},
title = {A Fast and Secure AKA Protocol for B5G},
year = {2023},
isbn = {9781450394451},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3547276.3548440},
doi = {10.1145/3547276.3548440},
