@article{10.1145/3699716,
author = {Hosseyni, Pedram and K\"{u}sters, Ralf and W\"{u}rtele, Tim},
title = {Formal Security Analysis of the OpenID FAPI 2.0 Family of Protocols: Accompanying a Standardization Process},
