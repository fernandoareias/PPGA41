author = {Chen, Shawn Shuoshuo and Wang, Weiyang and Canel, Christopher and Seshan, Srinivasan and Snoeren, Alex C. and Steenkiste, Peter},
title = {Time-division TCP for reconfigurable data center networks},
year = {2022},
isbn = {9781450394208},
