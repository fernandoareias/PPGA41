@inproceedings{10.1145/3576915.3616615,
author = {Bienstock, Alexander and R\"{o}sler, Paul and Tang, Yi},
title = {ASMesh: Anonymous and Secure Messaging in Mesh Networks Using Stronger, Anonymous Double Ratchet},
